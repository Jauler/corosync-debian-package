From: =?utf-8?q?Ferenc_W=C3=A1gner?= <wferi@debian.org>
Date: Tue, 8 Nov 2016 22:40:27 +0100
Subject: Use the default files from the service files

---
 init/corosync-qdevice.service.in | 3 ++-
 init/corosync-qnetd.service.in   | 3 ++-
 2 files changed, 4 insertions(+), 2 deletions(-)

diff --git a/init/corosync-qdevice.service.in b/init/corosync-qdevice.service.in
index 4f75c16..c45d5e2 100644
--- a/init/corosync-qdevice.service.in
+++ b/init/corosync-qdevice.service.in
@@ -6,7 +6,8 @@ Wants=corosync.service
 After=corosync.service
 
 [Service]
-ExecStart=@SBINDIR@/corosync-qdevice -f
+EnvironmentFile=-/etc/default/corosync-qdevice
+ExecStart=@SBINDIR@/corosync-qdevice -f $COROSYNC_QDEVICE_OPTIONS
 Type=simple
 Restart=on-abnormal
 
diff --git a/init/corosync-qnetd.service.in b/init/corosync-qnetd.service.in
index 99c626b..dcb55da 100644
--- a/init/corosync-qnetd.service.in
+++ b/init/corosync-qnetd.service.in
@@ -6,7 +6,8 @@ Requires=network-online.target
 After=network-online.target
 
 [Service]
-ExecStart=@BINDIR@/corosync-qnetd -f
+EnvironmentFile=-/etc/default/corosync-qnetd
+ExecStart=@BINDIR@/corosync-qnetd -f $COROSYNC_QNETD_OPTIONS
 Type=simple
 Restart=on-abnormal
 User=coroqnetd
